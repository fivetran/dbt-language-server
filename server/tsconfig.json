{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2021"],
    "outDir": "out",
    "moduleResolution": "node",
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}
