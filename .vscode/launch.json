// A launch configuration that compiles the extension and then opens it inside a new window
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Client",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/client/out/**/*.js"],
      "env": {
        "DBT_LS_DISABLE_TELEMETRY": "true",
        "DBT_LS_ENABLE_DEBUG_LOGS": "true"
        // "USE_DBT_CLI": "true"
        // "DBT_LS_POST_REQUEST_TIMEOUT": "20000"
        // "NODE_OPTIONS": "--unhandled-rejections=warn"
        // "NODE_OPTIONS": "--trace-warnings"
        // "NODE_OPTIONS": "--trace-deprecation"
      },
      "preLaunchTask": {
        "type": "npm",
        "script": "watch"
      }
    },
    {
      "name": "Attach to Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "timeout": 30000,
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/server/out/**/*.js"]
    },
    {
      "name": "Attach to Server 6010",
      "type": "node",
      "request": "attach",
      "port": 6010,
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/server/out/**/*.js"]
    },
    {
      "name": "Debug Server Unit Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "-r",
        "ts-node/register",
        "${workspaceRoot}/server/src/test/**/*.spec.ts",
        "--no-timeouts"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}/server",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Markdown Parser",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/markdown_parser/src/Parser.ts",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/markdown_parser/out/**/*.js"]
    },
    {
      "name": "E2E Tests Client",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "prepare_e2e",
      "runtimeExecutable": "${execPath}",
      "args": [
        // "--extensionDevelopmentPath=${workspaceRoot}/e2e-tests/extension",
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--extensionTestsPath=${workspaceRoot}/e2e/out/runners/index",
        "${workspaceRoot}/e2e/projects/test-workspace.code-workspace"
      ],
      "env": {
        "DBT_LS_ENABLE_DEBUG_LOGS": "true",
        "CLI_PATH": "code",
        "LOCAL_RUN": "true"
      },
      "outFiles": ["${workspaceRoot}/client/out/test/**/*.js"]
    },
    {
      "name": "dbt_ft Tests Client",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "prepare_e2e",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--extensionTestsPath=${workspaceRoot}/e2e/out/runners/index_dbt_ft",
        "${workspaceRoot}/../analytics/dbt_ft_prod"
      ],
      "env": {
        "CLI_PATH": "code",
        "LOCAL_RUN": "true",
        "DBT_LS_DISABLE_TELEMETRY": "true",
        "DBT_LS_ENABLE_DEBUG_LOGS": "true"
      },
      "outFiles": ["${workspaceRoot}/client/out/test/**/*.js"]
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Launch Client", "Attach to Server"]
    },
    {
      "name": "E2E Tests Client + Server",
      "configurations": ["E2E Tests Client", "Attach to Server"]
    }
  ]
}
